generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("student") // student, mentor, counsellor, institute, company, admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile?
  assessments Assessment[]
  roadmaps    Roadmap[]
  
  // Relations for new features
  studentProfile InstituteProfile? @relation("InstituteStudents", fields: [instituteId], references: [id])
  instituteId    String?
  managedFacility Facility?

  // Added missing relations
  mentorProfile    MentorProfile?
  instituteProfile InstituteProfile?
  companyProfile   CompanyProfile?
  payments         Payment[]
  subscriptions    Subscription[]
  postedJobs       Job[]
  mentorSessions   Session[] @relation("MentorSessions")
  studentSessions  Session[] @relation("StudentSessions")
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  bio       String?
  interests String? // Comma separated for now
  
  // Specific fields for different roles can be added here or in separate tables
}

model Assessment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // psychometric, academic
  score     Int
  result    String?  // JSON or text summary
  createdAt DateTime @default(now())
}

model Roadmap {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  domain    String
  status    String   @default("active") // active, completed
  createdAt DateTime @default(now())
  
  days      RoadmapDay[]
}

model RoadmapDay {
  id        String   @id @default(cuid())
  roadmapId String
  roadmap   Roadmap  @relation(fields: [roadmapId], references: [id])
  dayNumber Int
  title     String
  content   String
  isLocked  Boolean  @default(true)
  isCompleted Boolean @default(false)
}

model MentorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  expertise   String
  experience  Int
  hourlyRate  Int
  availability String // JSON or text
  isVerified  Boolean  @default(false)
}

model InstituteProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  code        String   @unique
  address     String
  courses     String   // JSON
  isVerified  Boolean  @default(false)
  
  facilities  Facility[]
  students    User[]   @relation("InstituteStudents")
}

model CompanyProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  industry    String
  website     String?
  size        String
  isVerified  Boolean  @default(false)
  type        String   @default("company") // company, ngo
  activities  Activity[]
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Int
  currency    String   @default("INR")
  status      String   // pending, success, failed
  type        String   // assessment, subscription, session
  referenceId String?
  createdAt   DateTime @default(now())
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  plan        String   // yearly_365
  startDate   DateTime @default(now())
  endDate     DateTime
  isActive    Boolean  @default(true)
}

model Job {
  id          String   @id @default(cuid())
  companyId   String
  company     User     @relation(fields: [companyId], references: [id])
  title       String
  description String
  type        String   // internship, fulltime
  location    String
  stipend     String?
  createdAt   DateTime @default(now())
}

model Session {
  id          String   @id @default(cuid())
  mentorId    String
  studentId   String
  mentor      User     @relation("MentorSessions", fields: [mentorId], references: [id])
  student     User     @relation("StudentSessions", fields: [studentId], references: [id])
  scheduledAt DateTime
  duration    Int      // minutes
  status      String   // scheduled, completed, cancelled
  notes       String?
}

model Facility {
  id          String   @id @default(cuid())
  instituteId String
  institute   InstituteProfile @relation(fields: [instituteId], references: [id])
  name        String
  managerId   String?  @unique
  manager     User?    @relation(fields: [managerId], references: [id])
  createdAt   DateTime @default(now())
}

model Activity {
  id          String   @id @default(cuid())
  companyId   String
  company     CompanyProfile @relation(fields: [companyId], references: [id])
  title       String
  description String
  type        String   // donation, volunteering
  duration    String?  // e.g., "15 days"
  createdAt   DateTime @default(now())
}
